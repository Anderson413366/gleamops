{
  "name": "gleamops",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "turbo dev --filter=@gleamops/web",
    "dev:web": "turbo dev --filter=@gleamops/web",
    "build": "turbo build",
    "build:web": "turbo build --filter=@gleamops/web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "generate:schema": "npx tsx scripts/generate-required-schema.ts",
    "audit:schema-parity": "npx tsx scripts/audit-schema-parity.ts",
    "audit:ui-fields": "npx tsx scripts/audit-ui-field-usage.ts",
    "db:start": "supabase start",
    "db:stop": "supabase stop --no-backup",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch@<3.1.4": "3.1.4",
      "minimatch@>=9.0.0 <9.0.7": "9.0.7",
      "tar@<7.5.8": "7.5.9",
      "rollup@>=4.0.0 <4.59.0": "4.59.0",
      "ajv@<6.14.0": "6.14.0",
      "ajv@>=7.0.0-alpha.0 <8.18.0": "8.18.0"
    }
  }
}
