{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SUPABASE_SERVICE_ROLE_KEY"],
  "tasks": {
    "dev": { "cache": false, "persistent": true },
    "build": { "dependsOn": ["^build"], "outputs": [".next/**", "dist/**"] },
    "lint": {},
    "typecheck": { "dependsOn": ["^build"] },
    "test": { "dependsOn": ["^build"] }
  }
}
